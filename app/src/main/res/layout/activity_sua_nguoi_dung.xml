        android:layout_height="wrap_content"
        android:hint="nhập username"
        android:inputType="text"/>
    <EditText
        android:id="@+id/suaND_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập password"
        android:inputType="textPassword"/>

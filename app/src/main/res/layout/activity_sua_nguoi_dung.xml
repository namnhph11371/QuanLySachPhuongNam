        android:gravity="center"
        />
    <EditText
        android:id="@+id/suaND_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"
        android:inputType="text"/>
    <EditText
        android:id="@+id/suaND_user"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyNguoiDungActivity"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_anhnen"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/emone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/txtTen_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn hải nam"
            android:textSize="16sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/txtSDT_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15/04/2001"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_butchi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/butchi"
        />
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"/>


</LinearLayout>